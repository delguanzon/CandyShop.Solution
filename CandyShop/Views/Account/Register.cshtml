@{
  Layout = "_Layout";
}

@using CandyShop.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />

@Html.ValidationSummary("", new { @class = "text-warning", @style = "font-weight: 600;" }) 

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{

  
  <div class="form-group">
    <div class="mb-3 row">
      @Html.LabelFor(user => user.Email, new { @class = "col-sm-2 col-form-label" })
      <div class="col-sm-6">
        @Html.EditorFor(user=> user.Email, new { htmlAttributes = new { @class = "form-control" }})
      </div>      
    </div>
    <div class="mb-3 row">
      @Html.LabelFor(user=> user.Password, new { @class = "col-sm-2 col-form-label"})
      <div class="col-sm-6">
        @Html.EditorFor(user=> user.Password, new { htmlAttributes = new { @class = "form-control" }})
      </div>
    </div>
    <div class="mb-3 row">
      @Html.LabelFor(user=> user.ConfirmPassword, new { @class = "col-sm-2 col-form-label"})
      <div class="col-sm-6">
        @Html.EditorFor(user=> user.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" }})
      </div>
    </div>
    <input type="submit" value="Register" class="btn btn-primary" />
  </div>
  
}

<p>@Html.ActionLink("Back to accounts page", "Index")</p>