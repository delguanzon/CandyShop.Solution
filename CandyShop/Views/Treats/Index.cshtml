@{
  Layout = "_Layout";
}

@using CandyShop.Models;

@if(@Model.Count == 0) 
{
  <h2>No Treats added yet</h2>  
}
else 
{
  <h2>All Treats:</h2>
  
  <ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new {id = treat.TreatId})</li>
  }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add New Treats", "Create")</p>