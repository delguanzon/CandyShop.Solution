@{
  Layout = "_Layout";
}

@using CandyShop.Models;

@if(@Model.Count == 0) 
{
  <h2>No Flavors added yet</h2>  
}
else 
{
  <h2>All Flavors:</h2>
  
  <ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new {id = flavor.FlavorId})</li>
  }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add New Flavors", "Create")</p>