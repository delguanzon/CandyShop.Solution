@{
  Layout = "_Layout";
}


@using CandyShop.Models;
@using CandyShop.ViewModels;
@model ListAllViewModel;

<div class="d-flex">
  <div class="w-50">
    <h2>Flavors</h2>
    <ul>
      @foreach (Flavor flavor in Model.Flavors)
      {
        <li>
          @Html.ActionLink(flavor.Name, "Details", "Flavors", new { id = flavor.FlavorId }, null)
        </li>
      }
    </ul>
    @if (Model.Flavors.Count == 0)
    {
      @Html.ActionLink("No Flavors Available. Click to Add", "Create", "Flavors")
    }
    else
    {
      @Html.ActionLink("See all Flavors", "Index", "Flavors")
    }

  </div>
  <div class="w-50">
    <h2>Treats</h2>
    <ul>
      @foreach (Treat treat in Model.Treats)
      {
        <li>
          @Html.ActionLink(treat.Name, "Details", "Treats", new { id = treat.TreatId }, null)
        </li>
      }
      @if (Model.Treats.Count == 0)
      {
        @Html.ActionLink("No Treats Available. Click to Add", "Create", "Treats")
      }
      else
      {
        @Html.ActionLink("See all Treats", "Index", "Treats")
      }
    </ul>    
  </div>
</div>

